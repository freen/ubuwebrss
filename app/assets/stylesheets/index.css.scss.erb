$gray: #2C2D2E;

body {
  padding: 0px;
  margin: 0px;
  font-family: Verdana, Arial;
  font-size: .8em;
  background-color: #B0A3AC;
}

a, a:visited { color: white; }

header {
  height: 200px;
  width: 100%;
  background: white url(<%= asset_path 'giorno_header.png' %>) no-repeat 550px top;
  float: left;
}

ul {
  list-style: none;
  padding: 0;
}

h2, h3, h4 { color: $gray; }

.content {
  color: white;
  float: left;
  width: 100%;

  .content_inner {
    width: 615px;
    margin: 0 auto;
    display: block;
    padding: 10px 0;

    .about, .scrape_log {
      float: left;
      width: 155px;
      margin-right: 30px;
    }

    .about {
      a.rss_icon {
          display: inline-block;
          background: url(<%= asset_path 'feed-icon-14x14.png' %>) no-repeat top left;
          height: 14px;
          width: 14px;
      }
    }

    .scrape_log {
      ul.scrape_events {
        li.log_entry {
          font-family: monospace;
          time { color: lightGray;}
        }
        li.log_header {
          h4 {
            margin-bottom: 6px;
          }
        }
      }
    }

    .feed_latest {
      float: right;
      width: 430px;
      article {
        padding-bottom: 7px;
        h3 {
          margin-bottom: 3px;
          font-weight: bold;
          font-style: italic;
          a {
            &:hover { text-decoration: underline; }
            color: $gray;
            text-decoration: none;
          }
          .artist {
            color: lightgray;
            padding-top: 0;
          }
        }
        .article_description { color: white; }
        time {
          color: lightgray;
          line-height: 1.5em;
          visibility: hidden;
        }
      }
    }
  }
}
